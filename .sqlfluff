[sqlfluff]
dialect = bigquery
templater = jinja
sql_file_exts = .sql
processes = -1
max_line_length = 200
exclude_rules = AL03,AL04,AM04,CP02,CV12,RF01,RF02,RF04,RF05,ST05,ST06,ST07
large_file_skip_byte_limit = 0

[sqlfluff:indentation]
tab_space_size = 2
indent_unit = space

[sqlfluff:rules:ambiguous.join]
fully_qualify_join_types = both

[sqlfluff:rules:capitalisation.keywords]
capitalisation_policy = upper

[sqlfluff:rules:capitalisation.identifiers]
extended_capitalisation_policy = lower
ignore_words = _PARTITIONTIME,_PARTITIONDATE
ignore_words_regex = \b[a-z]+(?:[A-Z][a-z0-9]*)*\b

[sqlfluff:rules:capitalisation.functions]
extended_capitalisation_policy = upper
ignore_words_regex = \$\{env\}

[sqlfluff:rules:capitalisation.literals]
capitalisation_policy = upper

[sqlfluff:rules:capitalisation.types]
extended_capitalisation_policy = upper

[sqlfluff:rules:layout.long_lines]
ignore_comment_lines = True

[sqlfluff:rules:convention.not_equal]
preferred_not_equal_style = c_style

[sqlfluff:templater:jinja:context]
params = { env: "test" }
